class Viewer(object):  ##3Dモデラーの中心になる「表示・操作の管理：クラス定義
    def __init__(self):#初期メソッド
        """ Initialize the viewer. """
        self.init_interface()##ウィンドウの作成や描画関数の登録など、
        self.init_opengl()##OpenGLに「どうレンダリングすればいいか」描画設定
        self.init_scene()#空間作成とサンプル配置
        self.init_interaction()　#操作関数について登録
        init_primitives()  #立方体・球などの基本図形（プリミティブ）の形情報を初期化する

    def init_interface(self):
        """ initialize the window and register the render function """
        glutInit()#    #GLUT = OpenGL用ウィンドウ管理ライブラリ。の初期化
        glutInitWindowSize(640, 480)  #サイズ設定
        glutCreateWindow("3D Modeller")  #()の中の名前でウィンドウを作成
        glutInitDisplayMode(GLUT_SINGLE | GLUT_RGB)  #GLUT_SINGLE = ダブルバッファなし:GLUT_RGB = RGBカラーで描画
        glutDisplayFunc(self.render)  #画面の再描画が必要なときに
render() 関数を呼び出すよう登録。

    def init_opengl(self):  #OpenGLの設定
        """ initialize the opengl settings to render the scene """
        self.inverseModelView = numpy.identity(4)#  #4×4の単位行列を作り、「視点変換の逆行列」を保存する変数に入れる。3D位置計算
        self.modelView = numpy.identity(4)#  #現在のカメラ位置や回転を表す行列の単位行列

        glEnable(GL_CULL_FACE)#  #裏側の面を描画しない設定をオン。
        glCullFace(GL_BACK)##  「裏側の面」を裏面として扱う。
        glEnable(GL_DEPTH_TEST)##  奥行き（手前・奥）の判定をする機能をオン。
        glDepthFunc(GL_LESS)  ##手前にある方を描画する、という奥行きルールを設定。

        glEnable(GL_LIGHT0)#　#光源（ライト）0番を有効にする。
        glLightfv(GL_LIGHT0, GL_POSITION, GLfloat_4(0, 0, 1, 0))##  ライトの位置を設定する（カメラの前方向）
        glLightfv(GL_LIGHT0, GL_SPOT_DIRECTION, GLfloat_3(0, 0, -1))#  #ライトが照らす方向を設定。

        glColorMaterial(GL_FRONT_AND_BACK, GL_AMBIENT_AND_DIFFUSE)##  物体に色を付けられるようにする
        glEnable(GL_COLOR_MATERIAL)#  ##色を反映させる設定をオン。
        glClearColor(0.4, 0.4, 0.4, 0.0)#  背景色をグレーに設定。

    def init_scene(self):
        """ initialize the scene object and initial scene """
        self.scene = Scene()##  空っぽの3Dシーン（Sceneクラス）を作る。
        self.create_sample_scene()##  立方体・球・雪だるま（階層構造）を最初に配置する関数を呼び出す。

    def create_sample_scene(self):
        cube_node = Cube()##  立方体のノード（Sceneに置けるオブジェクト）
        cube_node.translate(2, 0, 2)##  立方体を X=2, Z=2 に移動する。
        cube_node.color_index = 2##  色番号（パレットID）を設定
        self.scene.add_node(cube_node)#  3Dシーンに追加

        sphere_node = Sphere()## 立方体のノード（Sceneに置けるオブジェクト） 
        sphere_node.translate(-2, 0, 2)##   立方体を X=-2, Z=2 に移動する。
        sphere_node.color_index = 3##  色番号（パレットID）を設定。
        self.scene.add_node(sphere_node)##  3Dシーンに追加

        hierarchical_node = SnowFigure()#雪だるま（複数の球を組み合わせた階層構造）を作る。
        hierarchical_node.translate(-2, 0, -2)##雪だるまを別の位置に移動
        self.scene.add_node(hierarchical_node)##3Dシーンに追加。

    def init_interaction(self):
        """ init user interaction and callbacks """
        self.interaction = Interaction()##  self.interaction = Interaction()
        self.interaction.register_callback('pick', self.pick)##  「選択（ピック）」イベント → pick() を実行。
        self.interaction.register_callback('move', self.move)##  「移動」を行ったときに move() を実行。
        self.interaction.register_callback('place', self.place)##  「配置」操作 → place() を実行。
        self.interaction.register_callback('rotate_color', self.rotate_color)##  物を選んだ後,色を順番に変える操作に対応。
        self.interaction.register_callback('scale', self.scale)##  拡大・縮小操作に対応

    def main_loop(self):
        glutMainLoop()##  GLUTに「イベント処理の無限ループ」を渡す。マウス操作や描画など全部GLUTが管理する

if __name__ == "__main__":
    viewer = Viewer()##  Viewerクラス（全部の初期化を行う）が作られる。
    viewer.main_loop()##  GLUTの永久ループに入って,プログラムが動き続ける。
